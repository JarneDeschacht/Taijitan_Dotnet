@model Taijitan.Models.ViewModels.SessionViewModel
@using Taijitan.Helpers;
<h2>Registreer je aanwezigheid</h2>
<br />
<h4>Sessie op @Model.Date. met als lesgever  @Model.Teacher.FirstName @Model.Teacher.Name</h4>
<h4>Formule: @EnumHelpers.GetDisplayName(@Model.Formula)</h4>

<br />
<br />

<form method="post">
    <div class="list-group">
        @{
            foreach (var item in Model.Members)
            {
               
                <button type="submit" asp-controller="Session" asp-action="AddToPresent" asp-route-id="@item.UserId" class="list-group-item list-group-item-action">@item.FirstName @item.Name</button>
            }

        }
    </div>

    <a asp-controller="Session" asp-action="AddMemberFromOtherFormula" class="btn btn-taijitan">Voeg lid Toe</a>
</form>

<form method="post">
    

    <div class="list-group">
        @{
            foreach (var item in Model.MembersPresent)
            {
                <a asp-controller="Session" asp-action="AddToUnconfirmed" asp-route-id="@item.UserId" class="list-group-item list-group-item-action">@item.FirstName @item.Name</a>
            }
        }
    </div> 

    <a asp-controller="Session" asp-action="Confirm" class="btn btn-taijitan">Bevestig aanwezigheden</a>

</form>

