@model IEnumerable<Comment>
@{
    ViewData["Title"] = "Overzicht van alle commentaar:";
}

<h2>@ViewData["Title"]</h2>

<table class="table" id="summaryTable">
    <thead>
        <tr>
            <th>Familienaam</th>
            <th>Voornaam</th>
            <th>Modulenaam</th>
            <th>Aangemaakt op</th>
            <th>Commentaar</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item</td>
                <td>@item</td>
                <td>@item</td>
                <td>@item.DateCreated.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>